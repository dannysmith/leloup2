/* Facebook Font for thanyou page */
@font-face {
    font-family: 'facebook-letter';
    src: url('{{ 'facebolf-webfont.eot' | asset_url | replace: 'http://','https://' }}');
    src: url('{{ 'facebolf-webfont.eot?#iefix' | asset_url | replace: 'http://','https://' }}') format('embedded-opentype'),
         url('{{ 'facebolf-webfont.woff' | asset_url | replace: 'http://','https://' }}') format('woff'),
         url('{{ 'facebolf-webfont.ttf' | asset_url | replace: 'http://','https://' }}') format('truetype'),
         url('{{ 'facebolf-webfont.svg#facebook_letter_facesregular' | asset_url | replace: 'http://','https://' }}') format('svg');
    font-weight: normal;
    font-style: normal;

}

 /* Undo background and gradient */

#container, #header, #footer {
  background: transparent !important;
}

body {
	background: url(bgtile3.png) repeat;
}

#main {
	background-image: none !important;
	background-color: rgba(255,255,255,0.5) !important;
}
/* Undo overview background and borders */

#main #overview {
  background: #fff;
  border: none;
}
#main #overview > * {
  border: none;
}
#main #thumbs div {
  border: none;
}

#logo { 
  height: 200px;
  background: url({{ 'logo-checkout.png' | asset_url | replace: 'http://','https://' }}) center no-repeat;
}

#header > h1{
  text-align:center;
}

/* Hide the name of the store because we got the Le Loup logo now */

#header > h1 span.title {
  display:none;
}


/* Thank You Page Styling */

.facebook-btn {
	display: block;
	width: 333px;
	height: 1em;
	background: #3B5998;
	color: #fff;
	border-radius: 2px;
	font-family: 'facebook-letter', sans-serif;
	line-height: 1;
	font-size: 3em;
	text-align: center;
	padding: 20px;
	text-decoration: none;
	text-transform: lowercase;
	opacity: .9;
	
	transition: all 0.1s;
	-webkit-transition: all 0.1s;
}

.facebook-btn:hover {
	color: #fff;
	text-decoration: none;
	-webkit-transform: translate(0, -2px);
					transform: translate(0, -2px);
	box-shadow: 0 2px 4px 1px rgba(0,0,0,0.3);
	opacity: 1;
}

.facebook-btn:active {
	-webkit-transform: none;
					transform: none;
	box-shadow: none;
}
/* Email Form */

#mc_embed_signup input[type=email] {
	font-size: 130%;
	padding: 5px;
	width: 240px;
}

#mc_embed_signup input[type=submit] {
	font-size: 130%;
	padding: 5px;
	width: 100px;
	cursor: pointer;
	opacity: .9;
	
	border: 1px solid rgb(249,127,52);
	background-image: linear-gradient(top, rgb(251,178,82) 12%, rgb(249,127,52) 78%);
	background-image: -moz-linear-gradient(top, rgb(251,178,82) 12%, rgb(249,127,52) 78%);
	background-image: -webkit-linear-gradient(top, rgb(251,178,82) 12%, rgb(249,127,52) 78%);
	background-image: -ms-linear-gradient(top, rgb(251,178,82) 12%, rgb(249,127,52) 78%);

	background-image: -webkit-gradient(
		linear,
		left top,
		left bottom,
		color-stop(0.12, rgb(251,178,82)),
		color-stop(0.78, rgb(249,127,52))
	);
	border-radius: 2px;
}

#mc_embed_signup input[type=submit]:hover {
	opacity: 1;
}

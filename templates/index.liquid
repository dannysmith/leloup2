{% include 'slider' %}

<div class="homepage-notice clearfix">
    <h3>{{ settings.homepage-notice-title }}</h3>
    <p>{{ settings.homepage-notice-text }}</p>
</div>

<section class="featured clearfix">
    <div class="image-wrapper" style="background-image: url({{linklists.featured-product.links.first.object.featured_image | product_img_url: 'large'}});">
        <img src="{{linklists.featured-product.links.first.object.featured_image | product_img_url: 'large'}}" alt="" />
    </div>
    <div class="featured-content">
        <h1>{{settings.featured-heading}}</h1>
        <p>{{settings.featured-text}}</p>
        <a href="{{ linklists.featured-product.links.first.url}}" class="btn btn-pink cta">View Now</a>
    </div>
</section>

<aside class="social clearfix social-home">
    <ul class="clearfix">
        <li class="clearfix social-fb"><a href="https://www.facebook.com/LeLoupShop" target="_new">Facebook</a></li>
        <li class="clearfix social-tw"><a href="https://twitter.com/leloupshop" target="_new">Twitter</a></li>
        <li class="clearfix social-pt"><a href="http://pinterest.com/leloupshop/" target="_new">Pinterest</a></li>
    </ul>
</aside>

